{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./",
    "strict": true,
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "jsx": "react-jsx",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "./node_modules",
  ],
  "include": [
    "./src",
    "./types"
  ]
}