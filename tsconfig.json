{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist/esm",
    "strict": true,
    "target": "ES2021",
    "module": "ES2020",
    "jsx": "react-jsx",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src",
    "./"
  ]
}