{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist/esm",
    "strict": true,
    "target": "ES2021",
    "module": "ESNext",
    "jsx": "react-jsx",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src",
    "./index.d.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./.vscode",
    "./.git"
  ]
}